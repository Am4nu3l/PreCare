<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.Org_Bottom_nav">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:id="@+id/show"
            android:layout_marginRight="10dp"
            android:layout_gravity="start"
            android:drawableTop="@drawable/show"
            android:background="@android:color/transparent"
            app:cornerRadius="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/signOut"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:text="Sign Out"
            android:background="@android:color/transparent"
            app:cornerRadius="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/healthCenterName"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:text="Health Center Name"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:id="@+id/addAmbulance"
            android:drawableTop="@drawable/cars"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            app:cornerRadius="40dp" />
    </FrameLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="1000"
        app:el_expanded="false"
        app:el_parallax="0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingHorizontal="15dp">
            <EditText
                android:id="@+id/idPlateNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/bottom_sheet"
                android:hint="enter your plate number here"
                android:layout_gravity="center_vertical"
                android:textSize="14dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/turnOnPlateNumber"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="On"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/turnOffPlateNumber"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="Off"
                />
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:layout="@layout/activity_org_bottom_nav">
        </androidx.fragment.app.FragmentContainerView>
        <TextView
            android:id="@+id/startAmbulance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet"
            android:hint="Start Your Ambulance"
            android:padding="5dp"
            android:drawableEnd="@drawable/dropdown"
            android:textColor="@color/purple"
            android:layout_gravity="center|top"
            android:textStyle="bold"
            android:layout_marginVertical="2dp"
            android:textSize="14dp"/>

    </FrameLayout>

</LinearLayout>