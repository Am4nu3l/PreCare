<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.healthFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:id="@+id/more"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:drawableTop="@drawable/more_vert_24"
            android:background="@android:color/transparent"
            app:cornerRadius="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:text="Diet"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:drawableTop="@drawable/back"
            android:layout_marginLeft="10dp"
            android:id="@+id/back"
            android:background="@android:color/transparent"
            android:layout_gravity="start"
            app:cornerRadius="40dp" />
    </FrameLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:progressTint="@color/purple"
        android:id="@+id/progress"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:id="@+id/slideRight"
            android:layout_gravity="center|end"
            android:drawableTop="@drawable/next"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="50dp"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:id="@+id/slideLeft"
            android:layout_gravity="center|start"
            android:drawableTop="@drawable/next"
            android:rotation="180"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="10dp"
            app:cornerRadius="50dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:drawableStart="@drawable/fd"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:id="@+id/recommendedTitle"
        android:layout_marginVertical="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/brown"
        android:text="Recommended Diet"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            tools:listitem="@layout/diet_row"
            android:id="@+id/diet_list"
            />

    </LinearLayout>
</LinearLayout>