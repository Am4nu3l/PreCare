<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Screens.homeFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:layout_margin="10dp"
            android:layout_gravity="start"
            android:textSize="18dp"
            android:textStyle="bold"
           android:id="@+id/fullName"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    >
    <Button
        android:layout_width="30dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:id="@+id/premium"
        android:drawableTop="@drawable/premium"
        android:background="@android:color/transparent"
        app:cornerRadius="50dp"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="43dp"
        android:drawableTop="@drawable/more_vert_24"
        android:id="@+id/more"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        app:cornerRadius="40dp" />
</LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/smoke"
        android:orientation="vertical">
             <FrameLayout
                 android:layout_width="match_parent"
                 android:id="@+id/rvContainer"
                 android:layout_height="80dp">
             <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:listitem="@layout/activity_counselors"
                 android:layout_margin="5dp"
                 android:id="@+id/rv"
                 />
                 <com.github.ybq.android.spinkit.SpinKitView
                     android:id="@+id/spin_kit"
                     style="@style/SpinKitView.Small.Wave"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     app:SpinKit_Color="@color/purple"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent" />
             </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:background="@drawable/bottom_sheet"
        android:backgroundTint="@color/white"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        >
        <com.github.ybq.android.spinkit.SpinKitView
                             android:id="@+id/spin_kit2"
                             style="@style/SpinKitView.Small.Wave"
                             android:layout_width="wrap_content"
                             android:visibility="gone"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             app:SpinKit_Color="@color/purple"
                             app:layout_constraintTop_toTopOf="parent"
                             app:layout_constraintBottom_toBottomOf="parent"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet"
            android:backgroundTint="@color/smoke"
            android:layout_gravity="left"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tip"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blue_black"
                android:text="Tip of the day"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:id="@+id/date"
            android:layout_marginTop="10dp"
            android:text="5/3/2023"
            />
    </FrameLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="130dp"
                 android:background="@drawable/bottom_sheet"
                 android:layout_marginHorizontal="10dp"
                 android:backgroundTint="@color/smoke"
                 android:layout_marginTop="10dp"
                 android:layout_gravity="center"
                 >
                 <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_margin="5dp"
                     android:layout_weight="1"
                     app:civ_border_width="2dp"
                     app:civ_border_color="@color/purple"
                     android:src="@drawable/preg2"
                     />
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginHorizontal="20dp"
                     android:gravity="center_vertical"
                     android:layout_weight="1"
                     android:orientation="vertical">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Height"
                         android:textSize="20dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:textColor="@color/blue_black" />
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:layout_weight="1"
                         android:text="Weight"
                         android:textSize="20dp"
                         android:textColor="@color/blue_black" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Month/Day"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:textColor="@color/black"
                         android:textSize="16dp" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginHorizontal="20dp"
                     android:layout_weight="1"
                     android:gravity="center_vertical"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="---/---"
                         android:layout_weight="1"
                         android:textColor="@color/black"
                         android:id="@+id/height"
                         android:gravity="center"
                         android:textSize="18dp" />
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="---/---"
                         android:textColor="@color/black"
                         android:layout_weight="1"
                         android:id="@+id/weight"
                         android:gravity="center"
                         android:textSize="18dp" />
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="122"
                         android:layout_weight="1"
                         android:textColor="@color/black"
                         android:gravity="center"
                         android:id="@+id/daysleft"
                         android:textSize="16dp" />
                 </LinearLayout>
             </LinearLayout>
             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:padding="10dp"
                 android:background="@drawable/bottom_sheet"
                 android:backgroundTint="@color/white"
                 android:layout_marginHorizontal="10dp"
                 android:layout_gravity="center"
                 >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bottom_sheet"
                     android:backgroundTint="@color/smoke"
                     android:layout_marginBottom="10dp"
                     android:layout_gravity="top|left"
                     >
                     <de.hdodenhof.circleimageview.CircleImageView
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@drawable/info"
                         android:layout_marginHorizontal="10dp"
                         />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:textColor="@color/blue_black"
                         android:text="Did You Know? during pregnancy :"
                         />
                 </LinearLayout>
                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_width="wrap_content"
                     android:layout_height="70dp"
                     android:layout_gravity="center"
                     tools:listitem="@layout/activity_daily_fact"
                     android:layout_margin="30dp"
                     android:layout_marginHorizontal="10dp"
                     android:id="@+id/rvf"
                     />
                 <Button
                     android:layout_width="30dp"
                     android:layout_height="43dp"
                     android:id="@+id/slideRight"
                     android:layout_gravity="bottom|center"
                     android:drawableTop="@drawable/next"
                     android:backgroundTint="@color/white"
                     android:layout_marginLeft="40dp"
                     app:cornerRadius="50dp"/>
                 <Button
                     android:layout_width="30dp"
                     android:layout_height="43dp"
                     android:id="@+id/slideLeft"
                     android:layout_gravity="bottom|center"
                     android:drawableTop="@drawable/next"
                     android:rotation="180"
                     android:backgroundTint="@color/white"
                     android:layout_marginRight="40dp"
                     app:cornerRadius="50dp"/>
             </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>