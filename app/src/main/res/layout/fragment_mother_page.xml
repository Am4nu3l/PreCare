<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusedByDefault="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".registration_pages.MotherPage">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:text="Mother Registration"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:drawableTop="@drawable/back"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start"
            android:id="@+id/back"
            app:cornerRadius="40dp" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/smoke"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/blue_black"
                    android:text="Personal Information" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bottom_sheet"
                        android:id="@+id/ed_firstname"
                        android:padding="10dp"
                        android:hint="first name" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:padding="10dp"
                        android:background="@drawable/bottom_sheet"
                        android:id="@+id/ed_middle_name"
                        android:hint="middle name" />

                </LinearLayout>
            <EditText
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/white"
                android:background="@drawable/bottom_sheet"
                android:id="@+id/ed_age"
                android:hint="Age" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/bottom_sheet"
                    android:id="@+id/cr_password"
                    android:padding="10dp"
                    android:hint="create password" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/white"
                    android:padding="10dp"
                    android:background="@drawable/bottom_sheet"
                    android:id="@+id/con_password"
                    android:hint="confirm" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/blue_black"
                android:text="Address Information" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:id="@+id/ed_number1"
                    android:layout_margin="5dp"
                    android:inputType="phone"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:background="@drawable/bottom_sheet"
                    android:drawableStart="@drawable/_phone_24"
                    android:hint="phone number 1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="10dp"
                    android:inputType="phone"
                    android:background="@drawable/bottom_sheet"
                    android:id="@+id/ed_number2"
                    android:padding="10dp"
                    android:drawableStart="@drawable/_phone_24"
                    android:hint="phone number 2" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:id="@+id/ed_email"
                    android:backgroundTint="@color/white"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/_email_24"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bottom_sheet"
                    android:layout_weight="1"
                    android:hint="Email" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/bottom_sheet"
                    android:id="@+id/ed_city"
                    android:hint="City" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/ed_subcity"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/bottom_sheet"
                    android:layout_weight="1"
                    android:hint="Sub City" />
            </LinearLayout>
            <EditText
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:id="@+id/house_number"
                android:layout_margin="5dp"
                android:background="@drawable/bottom_sheet"
                android:backgroundTint="@color/white"
                android:hint="House no" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/blue_black"
                    android:text="Guardian Information" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    android:background="@drawable/bottom_sheet"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:id="@+id/ed_partners_name"
                    android:hint="Guardian full name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bottom_sheet"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/white"
                    android:id="@+id/ed_partners_number"
                    android:padding="10dp"
                    android:hint="phone number " />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:text="Please include details of any current treatment status briefly" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:backgroundTint="@color/white"
                            android:layout_weight="1"
                            android:maxLines="5"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/ed_allergy"
                            android:layout_margin="5dp"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:drawableStart="@drawable/_edit_24"
                            android:hint="any allergy ?" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/bottom_sheet"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:maxLines="5"
                            android:padding="10dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/_edit_24"
                            android:id="@+id/ed_current_med"
                            android:hint="medicine u are taking?" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:maxLines="5"
                            android:backgroundTint="@color/white"
                            android:drawablePadding="10dp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:drawableStart="@drawable/_edit_24"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/ed_current_hosp"
                            android:hint="previous or current care giving hospitals?" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textColor="@color/black"
                                android:paddingLeft="10dp"
                                android:text="pregnancy duration" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:background="@drawable/bottom_sheet"
                                    android:id="@+id/ed_month"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:layout_margin="5dp"
                                    android:backgroundTint="@color/white"
                                    android:layout_weight="1"
                                    android:hint="monthe's" />
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:backgroundTint="@color/white"
                                    android:background="@drawable/bottom_sheet"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    android:id="@+id/ed_day"
                                    android:hint="Days" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brown"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/Register_mother"
                android:text="Register"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>