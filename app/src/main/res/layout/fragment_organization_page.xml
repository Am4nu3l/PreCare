<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusedByDefault="true"
    android:orientation="vertical"
    tools:context=".registration_pages.MotherPage">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smoke"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:clickable="true"
            android:text="Health Center Registration"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:drawableTop="@drawable/back"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start"
            android:id="@+id/back"
            app:cornerRadius="40dp" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/smoke"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="5dp"
                        android:id="@+id/o_name"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bottom_sheet"
                        android:drawableStart="@drawable/_edit_24"
                        android:hint="Name" />
                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:text="Head Office Address"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/o_city"
                            android:hint="City" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:padding="10dp"
                            android:background="@drawable/bottom_sheet"
                            android:layout_weight="1"
                            android:id="@+id/o_subcity"
                            android:hint="Sub City" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_margin="5dp"
                            android:id="@+id/o_email"
                            android:backgroundTint="@color/white"
                            android:padding="10dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/_email_24"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/bottom_sheet"
                            android:layout_weight="1"
                            android:hint="Email" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/cr_password"
                            android:padding="10dp"
                            android:hint="create password" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:padding="10dp"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/con_password"
                            android:hint="confirm" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:inputType="phone"
                            android:padding="10dp"
                            android:background="@drawable/bottom_sheet"
                            android:id="@+id/o_number1"
                            android:drawableStart="@drawable/_phone_24"
                            android:hint="phone number 1" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:padding="10dp"
                            android:inputType="phone"
                            android:background="@drawable/bottom_sheet"
                            android:drawablePadding="10dp"
                            android:id="@+id/o_number2"
                            android:drawableStart="@drawable/_phone_24"
                            android:hint="phone number 2" />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/white"
                        android:layout_weight="1"
                        android:id="@+id/o_license"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:background="@drawable/bottom_sheet"
                        android:hint="Licence number" />
                </LinearLayout>
            <Button
                android:id="@+id/Register_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brown"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Register"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>